<div class="header-container navbar fixed-top">
  <div class="d-flex">
    <%= link_to events_path do %>
      <%= image_tag asset_path("Festsaal_logo"), height: 110, width: 180, alt: "Logo" %>
    <% end %>
    <div>
      <div class="d-flex justify-content-between header-links">
      <% if user_signed_in? %>
        <%= link_to "Suche", events_path %>
        <%= link_to "Kalender", events_path %>
        <%= link_to "Neues Event", new_event_path %>
        <%= link_to "Profil", user_path(current_user) %>
      <% else %>
        <%= link_to "Login", new_user_session_path %>
      <% end %>
      </div>
      <div class="red-header-bar-high"></div>
      <div class="red-header-bar-low"></div>
    </div>
  </div>
</div>
